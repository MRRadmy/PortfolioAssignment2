<body>

  <!-- Main Nav Bar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <!-- Brand/logo -->
    <a class="navbar-brand" href="#">
      <img src="/images/image_logo2.PNG" alt="logo" style="width:40px;">
    </a>
    
    <!-- Links -->
    <ul class="navbar-nav">

        <!-- Home -->
        <li class="nav-item">
            <% if (title == "Home") { %>
              <a class="nav-link active" href="/">
            <% } else { %>
              <a class="nav-link" href="/">
            <% } %>
              <i class="fas fa-home"></i> Home </a>
              </a>
          </li>
          
          <!-- Projects -->
          <li class="nav-item">
            <% if (title == "Projects") { %>
              <a class="nav-link active" href="/projects">
            <% } else { %>
              <a class="nav-link" href="/projects">
            <% } %>
            <i class="fas fa-project-diagram"></i> Projects </a>
              </a>
          </li>
          
          <!-- Services -->
          <li class="nav-item">
            <% if (title == "Services") { %>
              <a class="nav-link active" href="/services">
            <% } else { %>
              <a class="nav-link" href="/services">
            <% } %>
              <i class="fab fa-servicestack"></i> Services </a>
              </a>
          </li>
    
          <!-- About -->
          <li class="nav-item">
            <% if (title == "About Me") { %>
              <a class="nav-link active" href="/about">
            <% } else { %>
              <a class="nav-link" href="/about">
            <% } %>
            <i class="fas fa-address-card"></i> About Me </a>
              </a>
          </li>
          
          <!-- Contact -->
          <li class="nav-item">
            <% if (title == "Contact Me") { %>
              <a class="nav-link active" href="/contact">
            <% } else { %>
              <a class="nav-link" href="/contact">
            <% } %>
            <i class="fas fa-phone-square-alt"></i> Contact Me </a>
              </a>
          </li>

           <!-- Business Contact login-->
      <% if(typeof displayName == 'string' && displayName) { %>
        <li class="nav-item">
          <% if (title == "Contacts List") { %>
            <a class="nav-link active" href="/contact">
          <% } else { %>
            <a class="nav-link" href="/contact-list">
          <% } %>
          <i class="far fa-address-book"></i> Contacts List </a>
            </a>
        </li>
        <% } %>
        <!-- Login/Logout View -->
        
        <% if(typeof displayName == 'string' && displayName) { %>
          <li class="navbar-text"><i class="fas fa-lg fa-user"></i> Welcome, <%= displayName %></li>
          <li class="nav-item"><a href="/logout" class="nav-link">
            <i class="fas fa-lg fa-sign-out-alt"></i> Logout</a></li>
        <% } else { %>
          <li class="nav-item"><a href="/login" class="nav-link">
            <i class="fas fa-lg fa-sign-in-alt"></i> Login</a></li>
        <% } %>

    </ul>
  </nav>